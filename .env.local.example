# Frontend (Vite) env sample
# Copy to .env.local for local dev.

# Local backend:
# VITE_STRIPE_BACKEND_URL=http://localhost:4242

# Codespaces backend (example):
# VITE_STRIPE_BACKEND_URL=https://<codespace>-4242.app.github.dev

VITE_STRIPE_BACKEND_URL=http://localhost:4242

# Optional print server:
# VITE_PRINT_SERVER_URL=http://localhost:4243

# Optional: Comma-separated list of allowed service origins.
# If not set, safe defaults apply:
# - prod: same-origin only
# - dev: same-origin + common localhost ports
# VITE_SERVICE_ORIGIN_ALLOWLIST=http://localhost:4242,http://localhost:4243

# Prod safety: by default, service URLs must be https.
# Set to true ONLY if you explicitly want to allow http:// service URLs in production.
# VITE_ALLOW_INSECURE_SERVICES=true
